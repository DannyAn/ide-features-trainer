<idea-plugin version="2">
  <id>org.jetbrains.training</id>
  <name>Training Concept</name>
  <version>0.2</version>
  <vendor email="sergey.karashevich@jetbrains.com" url="http://www.jetbrains.com">JetBrains</vendor>

  <description><![CDATA[
      This IntelliJ IDEA plugin helps use IDE productively.<br>
    ]]></description>

  <change-notes><![CDATA[
      Menu items has been implemented.
    ]]>
  </change-notes>

  <!-- please see http://confluence.jetbrains.com/display/IDEADEV/Build+Number+Ranges for description -->
  <idea-version since-build="139"/>

  <!-- please see http://confluence.jetbrains.com/display/IDEADEV/Plugin+Compatibility+with+IntelliJ+Platform+Products
       on how to target different products -->
  <!-- uncomment to enable plugin in all products
  <depends>com.intellij.modules.lang</depends>
  -->



  <extensions defaultExtensionNs="com.intellij">
        <fileEditorProvider implementation="org.jetbrains.training.editor.EduEditorProvider"/>
        <actionPromoter implementation="org.jetbrains.training.editor.LearnActionPromoter"/>
  </extensions>

  <application-components>
    <!-- Add your application components here -->
  </application-components>

  <project-components>
    <!-- Add your project components here -->
  </project-components>

  <actions>
    <!-- Add your actions here -->
    <action id="StudyMenu" class="org.jetbrains.training.lesson.CourseMenu" text="Learn"
            description="Learn how to use IntelliJ IDEA">
      <add-to-group group-id="MainMenu" relative-to-action="HelpMenu" anchor="before"/>
    </action>
    <!--<action id="courseManager" class="org.jetbrains.training.lesson.CourseManager" text="Courses"-->
            <!--description="Start learn lessons">-->
      <!--<add-to-group group-id="StudyMenu"/>-->
    <!--</action>-->
    <action id="ShowEduUI" class="org.jetbrains.training.actions.ShowEduUi" text="DEBUG: Show Edu UI"
            description="DEBUG: Show Edu UI">
      <add-to-group group-id="CodeMenu"/>
    </action>
    <action id="ShowSmallLog" class="org.jetbrains.training.util.ShowSmallLog" text="Show Small Log"
            description="Show Small Log to log actions">
      <add-to-group group-id="CodeMenu" anchor="last"/>
    </action>
    <action id="HighlightEditorArea" class="org.jetbrains.training.actions.ShowEditor" text="Show Editor"
            description="Highlight Editor Area">
      <add-to-group group-id="CodeMenu" anchor="last"/>
    </action>
    <action id="HighlightEditorAreaOld" class="org.jetbrains.training.actions.ShowEditorOld" text="Show Editor Old"
            description="Highlight Editor Area Old">
      <add-to-group group-id="CodeMenu" anchor="last"/>
    </action>
        <action id="HighlightProjectTreeArea" class="org.jetbrains.training.actions.ShowProjectTree" text="Show Project Tree"
            description="Highlight Project Tree">
      <add-to-group group-id="CodeMenu" anchor="last"/>
    </action>
        <action id="HighlightStatusBar" class="org.jetbrains.training.actions.ShowStatusBar" text="Show Status Bar"
            description="Highlight Status Bar">
      <add-to-group group-id="CodeMenu" anchor="last"/>
    </action>
        <action id="HighlightNavBar" class="org.jetbrains.training.actions.ShowNavBar" text="Show Nav Bar"
            description="Highlight Navigation Bar">
      <add-to-group group-id="CodeMenu" anchor="last"/>
    </action>
  </actions>

</idea-plugin>